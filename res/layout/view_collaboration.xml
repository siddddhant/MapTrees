<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DisplayMessageActivity" >
	
    	<LinearLayout 
 		 android:id="@+id/linear"
 		 android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
   		 android:layout_marginTop="15dip"
    	 android:orientation="horizontal"
 		    >
 		    
    	   <TextView 
    	       android:id="@+id/latitude"
    	       android:layout_width="wrap_content"
    	       android:layout_height="wrap_content"
    	       android:textColor="@android:color/black"
    	       android:background="#FFFF33"
    	       android:layout_marginLeft="5dip"
    	       android:layout_marginRight="5dip"
    	       android:textSize="18sp"
    	       android:paddingLeft="10dip"
    	       android:paddingRight="10dip"
    	       android:paddingTop="10dip"
    	       android:paddingBottom="10dip"
    	       android:layout_weight="0.25"/>
    	   
    	   <TextView 
    	       android:id="@+id/longitude"
    	       android:layout_width="wrap_content"
    	       android:layout_height="wrap_content"
    	       android:textSize="18sp"
    	       android:paddingLeft="10dip"
    	       android:paddingRight="10dip"
    	       android:paddingTop="10dip"
    	       android:paddingBottom="10dip"
    	       android:layout_marginLeft="5dip"
    	       android:layout_marginRight="5dip"
    	       android:textColor="@android:color/black"
    	       android:background="#FFFF33"
    	       android:layout_weight="0.25"/>
    	   
    	   
    	    
    	   
    	        <TextView 
    	       android:id="@+id/empty"
    	       android:layout_width="wrap_content"
    	       android:layout_height="wrap_content"
    	       android:layout_marginLeft="5dip"
    	       android:layout_marginRight="5dip"
    	       android:textColor="@android:color/white"
    	       android:text=""
    	       android:layout_weight="0.5"
    	       />
    	    
 		  </LinearLayout>  
    
 		<LinearLayout 
 		 android:id="@+id/linearTags1"
 		 android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
    	 android:orientation="horizontal"
    	   
 		    >
 		    
 		      <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:background="@drawable/textcolor"
        
        android:src="@drawable/index"
         />
 		   <LinearLayout 
 		android:id="@+id/linearTags"
 		 android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
    	 android:orientation="vertical"
    	 android:paddingTop="10dip"
    	 android:layout_weight="1"
 		    >  
 		    
 		       <TextView 
    	       android:id="@+id/tagtext"
    	       android:layout_width="wrap_content"
    	       android:layout_height="wrap_content"
    	       android:layout_marginTop="60dip"
    	       android:layout_marginLeft="10dip"
    	       android:layout_marginRight="10dip"
    	       android:textSize="20sp"
    	       android:textColor="@android:color/black"
    	       android:text=""
    	       
    	       /> 
 		    
 		  </LinearLayout>  
 		</LinearLayout>   
    
     <LinearLayout
         android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
    	 android:orientation="horizontal">
         
         <EditText
        android:id="@+id/tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:ems="10"
        android:hint="Add tag" />
         
         
    <Button
        android:id="@+id/btntag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:onClick="shiftLeft"
        android:textColor="@android:color/white"
        android:background="@drawable/backcolor"
        android:text="Add Tag" />
         
        
     </LinearLayout>
     
     <Button
        android:id="@+id/sendToServer"
        android:layout_width="match_parent"
        android:freezesText="True"
        android:layout_marginTop="25dip"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@drawable/backcolor"
        android:onClick="sendData"
        android:text="Send" />
     <Button
        android:id="@+id/shareOnFacebook"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:freezesText="True"
        android:layout_marginTop="25dip"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@drawable/share_button_facebook"
        android:onClick="shareImageFacebook" />

</LinearLayout>