<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DisplayMessageActivity" >
	
    	<LinearLayout 
 		 android:id="@+id/linear"
 		 android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
    	 android:orientation="horizontal"
 		    >
 		    
    	   <TextView 
    	       android:id="@+id/latitude"
    	       android:layout_width="fill_parent"
    	       android:layout_height="wrap_content"
    	       android:layout_weight="1"/>
    	   
    	   <TextView 
    	       android:id="@+id/longitude"
    	       android:layout_width="fill_parent"
    	       android:layout_height="wrap_content"
    	       android:layout_weight="1"/>
    	       "
 		  </LinearLayout>  
    
 		<LinearLayout 
 		 android:id="@+id/linearTags1"
 		 android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
    	 android:orientation="horizontal"
 		    >
 		    
 		      <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:src="@drawable/index"
         />
 		   <LinearLayout 
 		android:id="@+id/linearTags"
 		 android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
    	 android:orientation="vertical"
    	 android:layout_weight="1"
 		    >  
 		    
 		       </LinearLayout>  
 		</LinearLayout>   
    
     <LinearLayout
         android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
    	 android:orientation="horizontal">
         
         <EditText
        android:id="@+id/tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Add tag" />
         
         
    <Button
        android:id="@+id/btntag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:onClick="shiftLeft"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="Add Tag" />
         
        
     </LinearLayout>
     
     <Button
        android:id="@+id/sendToServer"
        android:layout_width="match_parent"
        android:freezesText="True"
        android:layout_marginTop="25dip"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:onClick="sendData"
        android:text="Send" />
     <Button
        android:id="@+id/shareOnFacebook"
        android:layout_width="match_parent"
        android:freezesText="True"
        android:layout_marginTop="25dip"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:text="Share On Facebook"
        android:onClick="shareImageFacebook" />

</LinearLayout>