<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dip" >
 
    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="7dip">
 
        <ImageView
            android:id="@+id/list_image"
            android:layout_width="120dip"
            android:layout_height="220dip"
            android:layout_marginTop="2dip"
            />
 
    </LinearLayout>
 
   
    <TextView
        android:id="@+id/imageName"
        android:paddingTop="28dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dip"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_toRightOf="@+id/thumbnail"
  		/>
 
   
    <TextView
        android:id="@+id/imageAddress"
        android:layout_width="fill_parent"
		android:layout_marginTop="7dip"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
		        
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/imageName"
        />
    
    <TextView
        android:id="@+id/sent"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dip"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/imageAddress"
        />
 
 	
    <TextView
        android:id="@+id/shared"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dip"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/sent"
        />
    
 	<Button 
 	    android:id="@+id/buttonShare"
 	    android:layout_width="wrap_content"
 	    android:layout_height="30sp"
 	    android:textSize="10sp"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/shared"
        android:textColor="@android:color/white"
        android:visibility="gone"
		android:layout_marginLeft="8dip"
        android:background="@drawable/back_color_share"
        android:text="Share on FB" />
    
    	<Button 
 	    android:id="@+id/buttonSend"
 	    android:layout_height="30sp"
 	    android:textSize="10sp"
 	    android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/buttonShare"
        android:layout_marginLeft="8dip"
         android:layout_below="@+id/shared"
      	android:maxHeight="8dip"
      	 android:background="@drawable/backcolor"
      	android:textColor="@android:color/black"
      	android:visibility="gone"
        android:text="Send to Server" />
 
</RelativeLayout>